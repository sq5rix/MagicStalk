#:kivy 1.0.9
#:import AvrParser interface.AvrParser

<Label>:
    font_size: self.height / 4


<Flower>:

    obj_cur_mst: cur_mst
    obj_avg_mst: avg_mst
    obj_cur_temp: cur_temp
    obj_adj_mst: adj_mst

    GridLayout:
        cols: 2
        Label:
            text: 'Current Moisture'
        Label:
            id: cur_mst
            text: ''
        Label:
            text: 'Average Moisture'
        Label:
            id: avg_mst
            text: ''
        Label:
            text: 'Temperature'
        Label:
            id: cur_temp
            text: ''
        Label:
            text: 'Adjusted Moisture'
        Label:
            id: adj_mst
            text: ''
        Label:
            text: 'USB Port'
        Label:
            id: usb_port
            text: 'USB1'
